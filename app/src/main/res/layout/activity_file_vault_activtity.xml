<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="@color/greyf2"
    android:layout_height="match_parent"
    tools:context=".Activity.FileVaultActivtity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_left"
                    android:padding="10dp"
                    android:id="@+id/img_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_vault"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/grey01"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <include
                android:id="@+id/include123"
                layout="@layout/layout_banner_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_toolbar"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/blue017"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_noti"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desfilevault"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="13sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_photo"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_bgr_vault"
                            android:layout_marginTop="15dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_image_vault"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/grey01"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:id="@+id/number_photo"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_photo"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_vault_photo"
                            android:text="@string/photo"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="3dp"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"
                            android:paddingBottom="3dp"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/layout_video"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_bgr_vault"
                            android:layout_marginTop="15dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_video_vault"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/number_video"
                                android:textColor="@color/grey01"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_video"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_vault_photo"
                            android:text="@string/video"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:fontFamily="@font/poppins_regular"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"
                            android:textSize="16sp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:id="@+id/layout_audio"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_bgr_vault"
                            android:layout_marginTop="15dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_music_vault"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/number_audio"
                                android:textColor="@color/grey01"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_audio"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_vault_photo"
                            android:text="@string/audio"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:ellipsize="marquee"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/layout_file"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_bgr_vault"
                            android:layout_marginTop="15dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_file_vault"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/grey01"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="bottom"
                                android:id="@+id/number_file"
                                android:layout_alignParentRight="true"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_file"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_vault_photo"
                            android:text="@string/FILE"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true"
                            android:paddingBottom="3dp"/>

                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_native_medium"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>